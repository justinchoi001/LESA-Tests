<definition component-name="support-qa">
	<property name="testray.main.component.name" value="Support QA" />

	<var name="cse" value="Brian Suh" />
	<var name="lesaURL" value="/group/customer" />

	<set-up>
		<execute macro="User#login">
			<var method="TestPropsUtil#get('lesa2.email.address.1')" name="userEmailAddress" />
			<var method="TestPropsUtil#get('lesa2.email.password.1')" name="userPassword" />
		</execute>

		<execute function="Open" locator1="${lesaURL}" />

		<execute macro="GoToLESA#goToLESA" />
	</set-up>

	<command name="ChangeStatus" priority="3">
		<execute function="Click" locator1="L2Home#PREFERENCES" />
		<execute function="Click#clickAt" locator1="L2Preferences#MANAGER_DASHBOARD_TAB" />
		<execute function="AssertElementPresent" locator1="L2ManagerDashboard#TEAM_TABLE_TITLE" />

		<if>
			<condition function="IsElementPresent" locator1="L2ManagerDashboard#CSE_STATUS_IN" value1="In" />
			<then>
				<execute function="ScrollWebElementIntoView" locator1="L2ManagerDashboard#CSE_STATUS_ON_PTO" value1="On PTO" />
				<execute function="Click#clickNoMouseOver" locator1="L2ManagerDashboard#CSE_STATUS_ON_PTO" value1="On PTO" />
				<execute function="AssertTextEquals" locator1="L2ManagerDashboard#SUCCESS_MESSAGE" value1="Your request completed successfully." />
			</then>
		</if>

	</command>

	<tear-down>
		<execute macro="User#logout" />
	</tear-down>

</definition>